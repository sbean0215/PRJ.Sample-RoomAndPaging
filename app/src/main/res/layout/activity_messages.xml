<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.MessagesActivity">

    <data>
        <variable name="activity" type="test.push.noti.ui.MessagesActivity"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/btn_go_entrance"
                android:text="@string/txt_return_to_select_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"/>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_message_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_go_entrance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" >

            <com.google.android.material.tabs.TabItem
                    android:text="Tab1"
                    android:id="@+id/tabItem_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            <com.google.android.material.tabs.TabItem
                    android:text="Tab2"
                    android:id="@+id/tabItem_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            <com.google.android.material.tabs.TabItem
                    android:text="Tab3"
                    android:id="@+id/tabItem_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager_messages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:adapter="@{activity.getVpAdapter()}"
                app:layout_constraintTop_toBottomOf="@+id/tab_layout_message_type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
